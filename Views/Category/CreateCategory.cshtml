@model NimaApp.Models.CategoryMaster





@if (TempData["ErrorCheck"] != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["ErrorCheck"]</strong>
    </div>

}



@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Add New Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group">
            <span class="input-group-text">Enter Category</span>
            <input type="text" name="CategoryName" class="form-control" placeholder="Enter Category">
        </div>

        <span>@Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })</span>

        <div class="form-group">
            <div class="col-md-offset-2 m-3 col-md-10">
                <input type="submit" value="Submit" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("Back", "GetCategory", "Category", new { @class = "btn btn btn-secondary" })
</div>